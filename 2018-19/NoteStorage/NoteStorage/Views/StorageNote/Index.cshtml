
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<!DOCTYPE html>
<html>
<head>
    <title>!DOCTYPE</title>
    <meta charset="utf-8">
    <link href="@Url.Content("~/Content/IndexStyles.css")" rel="stylesheet" type="text/css" />
    <style>
        textarea{
            width: 300px;
            height:200px;
        }
        .btn {
            border: 1px solid grey;
            background-color:white;
            color: blue;
        }
    </style>
</head>
<body>
    <form action="/StorageNote/SaveNote/">
        <table>
            <tr>
                <td>
                    <label for="name">Name</label>
                </td>
                <td>
                    <input type="text" name="name"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="text">Text</label>
                </td>
                <td>
                    <textarea name="text"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <input class="btn" type="submit" value="Save"/>
                </td>
                <td>
                    <a class="btn" href="/StorageNote/NoteList/">Список заметок</a>
                </td>
            </tr>
        </table>
</form>
</body>
</html>